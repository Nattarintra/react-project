{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components": ["./components/*"],
      "@data": ["./data/*"],
      "@layout": ["./layout/*"],
      "@utils": ["./utils/*"],
      "@views": ["./views/*"],
      "@context": ["./context/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"],
  "include": ["./src/**/*.jsx", "./src/**/*.js"]
}
